<% include html/header %>
<% include html/leftbar %>
<section id="main-content">
	<section class="wrapper">          
        	<!-- BASIC FORM ELELEMNTS -->
        	<div class="row mt">			
        		<div class="col-lg-12">			
            <div class="form-panel">	
                <% if (message.length > 0) { %>
                  <div class="row mt"><div class="col-sm-6 col-md-offset-3 alert alert-danger"><%= message %></div></div>
                <% } %>
                <%  
                if (errors && errors.length>0) { 
                %>
                <div class="row mt">
                <div class="col-sm-6 col-md-offset-3 alert alert-danger"> 
                <%
                  for(var i = 0; i < errors.length; i++) {
                    %>
                    <%= errors[i].msg %><br />
                    <%
                  }
                %>
                </div></div>
                <%
                } 
                %>
      				   <form action="" method="post" name="frm" id="frm" class="form-horizontal style-form">
      				  	<div class=" add-task-row">
      					  <h4 class="pull-left">Manage Common Settings</h4>	 
      				  </div>
                	   <div class="form-group"></div>
                  
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Contact US Email: <span style="color:#FF0000">*</span></label>
                            <div class="col-sm-10">
							             <input type="text" class="form-control required email" id="email"  name="email" value="<%= result.email %>" />
                            </div>
                        </div>
                      
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Contact US Phone: <span style="color:#FF0000">*</span></label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control required" name="phone" value="<%= result.phone %>" id="phone"  />
                            </div>
                        </div>  

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Preferred Timezone: <span style="color:#FF0000">*</span></label>
                            <div class="col-sm-10">
                                <select class="form-control required" name="timezone">
                                    <option>Select Timezone</option>
                                    <% for(i in timezones) { %>
                                    <option value="<%= timezones[i].value %>" <%= (result.timezone == timezones[i].value) ? 'selected' : '' %>><%= timezones[i].label %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>                                             				   
					 
                        <div class="form-group">
                            <label class="col-lg-2 col-sm-2 control-label"></label>
                            <div class="col-lg-10">                            	  
                							  <input type="submit" class="btn btn-theme" name="submit" value="Submit" />&nbsp;
                							  <input type="button" class="btn btn-theme02" value="Cancel" onclick="javascript: return goBack();"/>
                            </div>
                        </div>
					  
                    </form>
                </div>
        		</div><!-- col-lg-12-->      	
        	</div><!-- /row -->          	
	</section>
<script type="text/javascript">
function goBack() {
  location.href="dashboard";
return false;
}
$(document).ready(function(){	
$("#frm").validate();
});
</script>
<script type="text/javascript" src="/js/jquery.validate.js"></script>
<% include html/footer %>