<!DOCTYPE html>
<html>
<head>
  <% include ../common/header %>
</head>
<body class="hold-transition skin-blue sidebar-mini">

<div class="wrapper">

  <% include ../common/nav %>

  <% include ../common/left %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">

    <section class="content-header">
      <h1>
        Dashboard
        <small>Admin Panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
      </ol>
    </section>

        <!-- Main content -->
    <section class="content">
      <div class="row">

        <div class="col-md-6">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Edit Admin Detail Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" role="form" action="/admin/setting" method="post" name="edit-frm" id="edit-frm">
              <div class="box-body">
                
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">Email</label>

                  <div class="col-sm-9">
                    <input name="username" value="<%= (result.username) ? result.username  : '' %>"
                                    class="form-control required email" required/>
                  </div>
                </div>

                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">First Name</label>

                  <div class="col-sm-9">
                    <input name="first_name" value="<%= (result.first_name) ? result.first_name  : '' %>"
                                    class="form-control required" required/>
                  </div>
                </div>

              <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">Last Name</label>
                  <div class="col-sm-9">
                    <input name="last_name" value="<%= (result.last_name) ? result.last_name  : '' %>"
                                    class="form-control required" required/>
                  </div>
                </div>
              </div>


              <!-- /.box-body -->
              <div class="box-footer">
                <input type="hidden" name="id" value="<%= (result.id) ? result.id  : '' %>" />
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Update</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>


        <div class="col-md-6">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Reset Admin Password Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" role="form" action="/admin/setting/reset" method="post" name="reset-frm" id="reset-frm">
              <div class="box-body">
                

                <div class="form-group">
                  <label for="old_password" class="col-sm-5 control-label">Current Password</label>

                  <div class="col-sm-7">
                    <input name="old_password" value="" 
                      type="password" class="form-control required" id="old_password"   />
                  </div>
                </div>

                <div class="form-group">
                  <label for="new_password" class="col-sm-5 control-label">New Password</label>

                  <div class="col-sm-7">
                    <input name="new_password" value="" 
                                  type="password" class="form-control required"  id="new_password" />

                  </div>
                </div>

                <div class="form-group">
                  <label for="password_again" class="col-sm-5 control-label">Confirm New Password</label>

                  <div class="col-sm-7">
                    <input name="password_again" value="" 
                      type="password" class="form-control round-form required" id="password_again"  />
                  </div>
                </div>


              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <input type="hidden" name="id" value="<%= (result.id) ? result.id  : '' %>" />
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Reset</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>

      </div>
    </section>   

  </div>
  <!-- /.content-wrapper -->

</div>
	<% include ../common/footer %>
	<script type="text/javascript">
		$(function () {
			  $("#edit-frm").validate({   
          rules: {
            first_name: { required: true, minlength: 3 },  
            last_name: { required: true, minlength: 1 }
          }
        });

        $("#reset-frm").validate({   
          rules: {  
            old_password: {
              required: true,
              minlength: 4
            },
            new_password: {
              required: true,
              minlength: 4
            },
            password_again: {
              equalTo: "#new_password"
            }
          }  
        });
		});
	</script>
</body>
</html>
