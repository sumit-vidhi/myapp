<!DOCTYPE html>
<html>
<head>
  <% include ../common/header %>
    <link rel="stylesheet" href="/vendor/iCheck/square/blue.css">
    <style>
      .bg-img {
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(199,199,199,0.5),rgba(199,199,199,0.5)),url('/img/main-bg.jpg') center center no-repeat;
        background-size: cover;
        
        &:before {
          content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-image: linear-gradient(to bottom right,#002f4b,#dc4225);
        opacity: .6; 
        }
      }
    </style>
</head>
<body class="bg-img hold-transition login-page">


<div class="login-box">

  <% if (message.length > 0) { %>
              <div class="alert alert-danger"><%= message %></div>
  <% } %>

  <%  if (errors && errors.length>0) { %>
    <div class="alert alert-danger">  
      <%
        for(var i = 0; i < errors.length; i++) {
          %>
          <%= errors[i].msg %><br />
          <%
        }
      %>
    </div>
  <% } %>

  <div class="login-logo">
    <a href="#"><b>Well</b>Faster</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Please Sign in here</p>

    <form role="form" class="form-login" id="frm" method="post" action="">
      <div class="form-group has-feedback">
        <input type="text" name="username" class="form-control required email" placeholder="Email" value="<%= username %>" maxlength="20" autofocus>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" name="password" class="form-control required" placeholder="Password" maxlength="20" />
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input name="remember" type="checkbox" value="Remember Me"> Remember Me
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <input type="hidden" name="loginsubmit" value="login" />
          <button type="submit" class="btn btn-primary btn-block btn-flat" onclick="javascript:return submitlogin();">Sign In</button>
        </div>
        <!-- /.col -->
      </div>
    </form>

    <a href="#">I forgot my password</a><br>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->


<% include ../common/footer %>
<script src="/vendor/iCheck/icheck.min.js"></script>
<script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
    $("#frm").validate(); 
  });
  function submitlogin() {
    jQuery("#frm").submit();  
  }
</script>

</body>
</html>
