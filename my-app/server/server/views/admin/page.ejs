<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../common/header %>
    </head>
  <body>
      <div id="wrapper">
        <% include ../common/nav %>

          <!-- Page Content -->
          <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h4 class="page-header">Create a new Page</h4>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-8">
                                    <%
                                      if(! result) result = {};
                                    %>
                                    <form role="form" method="post" id="frm">
                                        <div class="form-group">
                                            <label>Title</label>
                                            <input name="title" value="<%= (result.title ? result.title : '' ) %>" id="title"
                                              class="form-control" />
                                            <p class="help-block">Max 128 characters.</p>
                                        </div>
                                        <div class="form-group">
                                            <label>Content</label>
                                            <textarea name="content" id="content" class="form-control" rows="10"> 
                                            <%- (result.content ? result.content : '' ) %>
                                            </textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Status</label>
                                            <label class="radio-inline">
                                                <input type="radio" name="status" value="1" id="status1" value="option1" 
                                                <%= (result.status) ? 'checked' : '' %>>  Active
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="status" value="0" id="status2" value="option2"
                                                <%= (! result.status) ? 'checked' : '' %> > Inactive
                                            </label>
                                        </div>
                                        <% if(result.id) { %>
                                          <input type="hidden" name="id" value="<%= result.id %>" />
                                        <% } %>

                                        <button type="submit" class="btn btn-success">Create</button>
                                        <button type="reset" class="btn btn-default" onclick="return goBack();">Back</button>
                                    </form>
                                </div>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

        <% include ../common/footer %>
      </div>
      <!-- /#wrapper -->
    <% include ../common/script %>  
    <script type="text/javascript" src="/tinymce/tinymce.min.js"></script> 
    <script type="text/javascript" src="/tinymce/jquery.tinymce.min.js"></script> 
    <script type="text/javascript">
      $(document).ready(function(){
        tinymce.init({
          selector: 'textarea',
          height: 400,
          menubar: false,
          branding: false,
          plugins: [
            'advlist autolink lists link image charmap print preview anchor textcolor',
            'searchreplace visualblocks code fullscreen',
            'insertdatetime media table contextmenu paste code help'
          ],
          toolbar: 'insert | undo redo |  formatselect | bold italic backcolor  | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
          content_css: [
            '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
            '//www.tinymce.com/css/codepen.min.css']
        });

      });
    </script>
  </body>
</html>