<!DOCTYPE html>
<html lang="en">
	<head>
		<% include ../common/header %>
	</head>
	<body>
	  	<div id="wrapper">
			<% include ../common/nav %>
			
			<div id="page-wrapper">
			    <div class="row">
			        <div class="col-lg-12">
			            <h4 class="page-header">Admin Users</h4>
			        </div>			       
			    </div>

			    <div class="row">
			    	 <div class="col-lg-6">
			            <% if (errors.length > 0) { %>
					      <div class="alert alert-danger">
					      	 <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					      	<%= errors %>
					      </div>
					    <% } %>
						<% if (success.length > 0) { %>
					      <div class="alert alert-success">
					      	 <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					      	<%= success %>
					      </div>
					    <% } %>
			        </div>
			    	<div class="col-md-6">
			    		<a href="/admin/edit-admin" title="Add New User" class="btn btn-success btn-sm pull-right">Add New User</a>
			    	</div>

			        <div class="col-lg-12" style="margin-top:10px;">
			            <div class="panel panel-default">
			                <div class="panel-body">

			                <table id="editable" role="grid" aria-describedby="editable_info" 
			                	class="table table-hover dataTable" >
								<thead>
									<tr>
										<th>Emails</th>
										<th>First Name</th>
										<th>Last Name</th>
										<th>Created</th>
										<th>Control</th>
							  		</tr>
								</thead>
			   				</table>

			                </div>
			            </div>
			        </div>
			    </div>
			</div>  

			<% include ../common/footer %>
		</div>
	    <!-- /#wrapper -->
		
		<% include ../common/script %>
	    
		<script type="text/javascript">
			function confirmDelete() {
				if(!confirm("Are you sure you want to delete this user")) {
					return false;
				}
				else {
					return true;
				}
			}
			function addNewUser() {
				location.href="add-admin-user";
				return false;
			}
			$(document).ready(function() {
				$('#editable').dataTable( {
					"processing": true,
					"serverSide": true,
					"iDisplayLength":25,
					"columnDefs": [ { "targets": 4, "orderable": false,"sClass": "a-right" } ],
					"ajax": "admin_users_ajax"
				} );
			} );
		</script>
	</body>
</html>