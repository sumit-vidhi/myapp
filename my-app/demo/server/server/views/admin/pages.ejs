<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../common/header %>
    </head>
  <body>
      <div id="wrapper">
        <% include ../common/nav %>

        <% include ../common/functions %>
       

          <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Pages</h3>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                       
                        <div class="panel-body">
                            <% if(results && results.length  > 0 ) { %>
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Content</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i=0; i < results.length; i++ ) { %>
                                            <tr>
                                                <td><%= results[i].title %></td>
                                                <td><%= substr(results[i].content, 0, 50) %></td>
                                                <td><%= (results[i].status) ? 'Active' : 'Inactive' %></td>
                                                <td class="text-center">
                                                    <a href="/admin/edit-page/<%= results[i].id %>" title="Edit">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                </td>
                                            </tr>

                                        <% } %>
                                      
                                    </tbody>
                                </table>
                            <% } %>    

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

        <% include ../common/footer %>
      </div>
      <!-- /#wrapper -->
    <% include ../common/script %>  
  </body>
</html>