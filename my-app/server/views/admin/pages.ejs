<!DOCTYPE html>
<html>
<head>
  <% include ../common/header %>
  <link rel="stylesheet" href="/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
</head>
<body class="hold-transition skin-blue sidebar-mini">

<div class="wrapper">

  <% include ../common/nav %>

  <% include ../common/left %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    
    <section class="content">
  		
  		<% include ../common/alert %>

  		<div class="row">
    		<div class="col-xs-12">
      			<div class="box">
        			<div class="box-header">
          				<h3 class="box-title">Pages</h3>
        			</div>
        			<!-- /.box-header -->
        			<div class="box-body">
        				<% if(results && results.length  > 0 ) { %>
	          				<table id="example2" class="table table-bordered table-hover">
	                            <thead>
	                                <tr>
	                                    <th>Title</th>
	                                    <th>Content</th>
	                                    <th>Status</th>
	                                    <th>Actions</th>
	                                </tr>
	                            </thead>
	                            <tbody>
	                                <% for(let i=0; i < results.length; i++ ) { %>
	                                    <tr>
	                                        <td><strong><%= results[i].title %></strong></td>
	                                        <td><%= fn.substr(results[i].content, 0, 50) %></td>
	                                        <td><%= (results[i].status) ? 'Active' : 'Inactive' %></td>
	                                        <td class="">
	                                            <a href="/admin/edit-page/<%= results[i].id %>" title="Edit">
	                                                <i class="fa fa-pencil btn btn-success btn-xs"></i>
	                                            </a>
	                                            <% if(results[i].is_protected == 'no'){ %>
		                                            <a href="/admin/pages/delete/<%= results[i].id %>" title="Delete" data-method="post" data-confirm="Are you sure to delete this page?">
		                                                <i class="fa fa-trash btn btn-danger btn-xs"></i>
		                                            </a>
		                                        <% } %>    
	                                        </td>
	                                    </tr>

	                                <% } %>
	                              
	                            </tbody>
	                        </table>
	                    <% } %>     
          			</div>
          		</div>
          	</div>
        </div>
    </section>      				


  </div>
  <!-- /.content-wrapper -->
</div>
  	<% include ../common/footer %>
  	<script src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
	<script src="/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
	 <script>
	  $(function () {
	    $('#example2').DataTable();
	  });
	</script>
</body>
</html>
