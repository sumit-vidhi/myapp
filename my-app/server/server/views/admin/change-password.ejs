<% include html/header %>
<% include html/leftbar %>
<section id="main-content">
	<section class="wrapper">          
        	<!-- BASIC FORM ELELEMNTS -->
        	<div class="row mt">			
        		<div class="col-lg-12">			
            <div class="form-panel">	
                <% if (message.length > 0) { %>
                  <div class="row mt"><div class="col-sm-12 alert alert-danger"><%= message %></div></div>
                <% } %>
                <%  
                if (errors && errors.length>0) { 
                %>
                <div class="row mt">
                <div class="col-sm-12 alert alert-danger"> 
                <%
                  for(var i = 0; i < errors.length; i++) {
                    %>
                    <%= errors[i].msg %><br />
                    <%
                  }
                %>
                </div></div>
                <%
                } 
                %>
      				   <form action="" method="post" name="frm" id="frm" class="form-horizontal style-form">
      				  	<div class=" add-task-row">
      					  <h4 class="pull-left">Update Password</h4>	 
      				  </div>
                	   <div class="form-group"></div>            
                       
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">New Password: <span style="color:#FF0000">*</span></label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control required" name="new_password" value="" id="new_password"  />
                            </div>
                        </div>                                               				   
					    <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Re Password: <span class="error">*</span></label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control round-form required" id="password_again" name="password_again" value="" />                                  
                            </div>
                          </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-sm-2 control-label"></label>
                            <div class="col-lg-10">                            	  
							  <input type="submit" class="btn btn-theme" name="submit" value="Submit" />&nbsp;
							  <input type="button" class="btn btn-theme02" value="Cancel" onclick="javascript: return goBack();"/>
                            </div>
                        </div>
					  
                    </form>
                </div>
        		</div><!-- col-lg-12-->      	
        	</div><!-- /row -->          	
	</section>
<script type="text/javascript">
function goBack() {
  location.href="/admin/users";
return false;
}
$(document).ready(function(){	
$("#frm").validate({   
        rules: {
            old_password: {
              required: true,
              minlength: 3
            },               
            new_password: {
              required: true,
              minlength: 3
            },
            password_again: {
              equalTo: "#new_password"
            }            
        }
    });
});
</script>
<script type="text/javascript" src="/js/jquery.validate.js"></script>
<% include html/footer %>